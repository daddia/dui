{
  "name": "@daddia/dui",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://daddia.com",
  "repository": "github:daddia/dui",
  "license": "MIT",
  "author": "daddia",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./css/*": "./css/*",
    "./components/*": {
      "types": "./dist/types/components/*.d.ts",
      "import": "./dist/esm/components/*.js",
      "require": "./dist/cjs/components/*.js"
    }
  },
  "files": [
    "dist/*",
    "css/*"
  ],
  "scripts": {
    "build": "rimraf dist && pnpm build:components && pnpm build:tailwind",
    "build:components": "rollup -c",
    "build:tailwind": "tailwindcss -i src/styles/default.css -o ./css/index.css --minify",
    "test": "vitest",
    "watch": "rollup -c -w",
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "reset": "pnpm clean && rm -rf node_modules .turbo"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@tailwindcss/cli": "^4.1.4",
    "@tailwindcss/postcss": "^4.1.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@turbo/gen": "^2.5.0",
    "@types/node": "^22.14.0",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "eslint": "^9.24.0",
    "fast-glob": "^3.3.3",
    "postcss": "^8.5.3",
    "radix-ui": "^1.3.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rollup": "^4.40.0",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "tailwindcss": "^4.1.4",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-variants": "^1.0.0"
  },
  "peerDependencies": {
    "radix-ui": "^1.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.1.4"
  }
}
